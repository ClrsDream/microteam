<view class="page">
  <view class="page__bd">

      <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell">
              <view class="weui-cell__bd">
                  <input class="weui-input" 
                  placeholder="输入公告标题..." 
                  bindinput="bindTitle" />
              </view>
          </view>
      </view>
  
      <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell">
              <view class="weui-cell__bd">
                  <textarea class="weui-textarea" 
                  placeholder="输入公告内容..." 
                  style="height: 3.3em"
                  bindinput="bindContent" />
              </view>
          </view>
      </view>
    
      <view class="weui-btn-area">
            <button class="weui-btn" type="primary" bindtap="publish">发布公告</button>
      </view>
  </view>
</view>
