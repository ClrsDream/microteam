.page__hd{
    margin: 0;
    padding: 0;
    height:36px;
}
.user .teaminfor{
  padding-left: 5px;  
  font-size: 30rpx;
  height:36px;
  line-height:36px;
}
.user .userinfo-avatar{
  display: inline-block;
  width: 28px;
  height: 28px;
  margin-right: 2px;
  border-radius: 50%;
}
.userinfo-nickname{
  font-size: 30rpx;
  height:36px;
  line-height:36px;
}
.userinfo{
    flex-direction:row-reverse;
    padding-right: 4px;
    flex-wrap:nowrap;
    align-items:center;
    height:36px;
}
.marginleftspace{
    margin-left: 8px;
}
.flex-column{
  flex-direction: column;
}

.item-image{
  margin-right: 5px;vertical-align: middle;width:42px; height: 42px;
}

.item-title{
  font-size:32rpx;
  color:black;
}

.item-desc{
  font-size:24rpx;
  color:darkgrey;
}

.weui-grids {
  margin:6px 0px 6px 0px;
  background-color: transparent;
  border:0;
}
.weui-grid__label {
  font-size:12px;
  color:dimgray;
}
.weui-grid {
  position:relative;
  float:left;
  padding:4px;
  width:20%;
  box-sizing:border-box;
  border:0;
}

.speed-dial-buttons .speed-dial-button{
  background-color:#136C5E;
}
.floating-button {
    width:40px;
    height:40px;
    border-radius:50%;
    background-color:#136C5E;
    color:#fff;
    overflow:hidden;
    -webkit-transition-duration:.3s;
    transition-duration:.3s;
    display:-webkit-box;
    display:-webkit-flex;
    display:flex;
    -webkit-box-align:center;
    -webkit-align-items:center;
    align-items:center;
    -webkit-box-pack:center;
    -webkit-justify-content:center;
    justify-content:center;
    box-shadow:0 0 4px rgba(0, 0, 0, 0.14), 0 4px 8px rgba(0, 0, 0, 0.28);

}
